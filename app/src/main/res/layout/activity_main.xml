<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:src="@drawable/arrow_top"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="35dp">

        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:padding="13dp"
        android:background="@drawable/edge_gray"
        android:hint="아이디 입력"
        android:textSize="22sp" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:padding="13dp"
        android:inputType="textPassword"
        android:background="@drawable/edge_gray"
        android:hint="비밀번호 입력"
        android:textSize="22sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="25dp">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="22sp"
        android:padding="10dp"
        android:backgroundTint="#5F0080"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textColor="#5F0080"
        android:textStyle="bold"
        android:textSize="22sp"
        android:padding="10dp"
        android:background="@drawable/edge"/>
<!--    이거 왜 안 먹지? 투명 보라색 테두리 해결 필요 -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top|center"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디 찾기"
            android:textColor="#BCB4B4"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <View
            android:background="#ACACAC"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginHorizontal="10dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 찾기"
            android:textColor="#BCB4B4"
            android:textSize="15sp"
            android:textStyle="bold" />


    </LinearLayout>

    <View
        android:background="#ACACAC"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:paddingVertical="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="카카오로"
            android:textSize="17sp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="간편하게 시작"
            android:textColor="#5F0080"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="하세요"
            android:textSize="17sp"/>


    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFEB3B"
        android:text="카카오로 시작하기"
        android:textSize="20sp"
        android:paddingVertical="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
<!--    카카오 이미지는 버튼안에 어떻게 넣지 -->




</LinearLayout>